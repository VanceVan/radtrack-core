<div id="login_form">

  <%= link_to image_tag('graffle/radtrack_logo.png', :border => '0'), root_url %><br/>

  <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <div>
      <%= f.label :login, 'Enter your email address' %><br />
      <%= f.text_field :login %>
    </div>
    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
		<div><br/><%= submit_tag 'Log in' %></div>
		<div><br/><%= link_to 'Forgot your password?', new_password_reset_path %></div>
    
  <% end %>

</div>




